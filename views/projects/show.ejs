<%- include('../partials/header', { title: project.title }) %>

<div class="max-w-6xl mx-auto">
    <div class="flex items-center justify-between mb-8">
        <a href="/projects" class="text-gray-500 hover:text-white transition-colors flex items-center gap-2">
            <i class="fas fa-arrow-left"></i> Arşive Dön
        </a>
        
        <% if (user && (user.id == project.createdBy._id || user.role == 'admin')) { %>
            <div class="flex gap-3">
                <a href="/projects/<%= project._id %>/edit" class="bg-dark-800 border border-white/10 text-white px-4 py-2 rounded-lg text-sm hover:border-brand-500 transition-colors">
                    Projeyi Düzenle <i class="fas fa-pen ml-1 text-xs text-gray-500"></i>
                </a>
                <form action="/projects/<%= project._id %>?_method=DELETE" method="POST" class="inline">
                    <button type="submit" onclick="return confirm('Bu projeyi silmek istediğinize emin misiniz?')" class="bg-red-500/10 border border-red-500/20 text-red-400 px-4 py-2 rounded-lg text-sm hover:bg-red-500/20 transition-colors">
                        Sil
                    </button>
                </form>
            </div>
        <% } %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <div class="lg:col-span-2 space-y-8">
            <div class="bg-dark-800 border border-white/5 rounded-2xl overflow-hidden p-2">
                <% if(project.imagePath) { %>
                    <img src="<%= project.imagePath %>" alt="<%= project.title %>" class="w-full rounded-xl shadow-2xl">
                <% } else { %>
                    <div class="w-full h-96 bg-dark-900 rounded-xl flex items-center justify-center border border-white/5 border-dashed">
                        <span class="text-gray-600 font-mono flex items-center gap-2"><i class="fas fa-image"></i> GÖRSEL_VERİ_YOK</span>
                    </div>
                <% } %>
            </div>

            <div class="bg-dark-800/50 border border-white/5 rounded-2xl p-8">
                <h3 class="text-brand-400 font-mono text-sm mb-4">/// PROJE DETAYLARI</h3>
                <div class="prose prose-invert max-w-none text-gray-300 leading-relaxed">
                    <p class="whitespace-pre-line"><%= project.description %></p>
                </div>
            </div>
        </div>

        <div class="space-y-6">
            <div class="bg-dark-800 border border-white/5 rounded-2xl p-6 relative overflow-hidden">
                <div class="absolute top-0 left-0 w-1 h-full bg-brand-500"></div>
                
                <h1 class="text-3xl font-bold text-white mb-2"><%= project.title %></h1>
                <p class="text-gray-500 text-sm mb-6 font-mono">Mimari & Altyapı</p>

                <div class="space-y-4 mb-8">
                    <div class="flex justify-between items-center py-2 border-b border-white/5">
                        <span class="text-gray-500 text-xs uppercase font-semibold">Durum</span>
                        <span class="text-brand-400 text-xs font-bold bg-brand-500/10 px-2 py-1 rounded uppercase">
                            <%= project.visibility === 'public' ? 'Herkese Açık' : 'Özel' %>
                        </span>
                    </div>
                    <div class="flex justify-between items-center py-2 border-b border-white/5">
                        <span class="text-gray-500 text-xs uppercase font-semibold">Mimarı</span>
                        <span class="text-white text-sm flex items-center gap-2"><i class="fas fa-user-circle text-gray-600"></i> <%= project.createdBy.username %></span>
                    </div>
                    <div class="flex justify-between items-center py-2 border-b border-white/5">
                        <span class="text-gray-500 text-xs uppercase font-semibold">Oluşturulma</span>
                        <span class="text-white text-sm"><%= new Date(project.createdAt).toLocaleDateString('tr-TR') %></span>
                    </div>
                </div>

                <div class="space-y-3">
                    <% if(project.liveUrl) { %>
                        <a href="<%= project.liveUrl %>" target="_blank" class="block w-full text-center bg-brand-500 hover:bg-brand-400 text-dark-900 font-bold py-3 rounded-xl transition-all shadow-[0_0_15px_rgba(52,211,153,0.2)]">
                            <i class="fas fa-bolt mr-2"></i> Canlı Demo'yu Görüntüle
                        </a>
                    <% } %>
                    <% if(project.repoUrl) { %>
                        <a href="<%= project.repoUrl %>" target="_blank" class="block w-full text-center bg-dark-700 hover:bg-white text-white hover:text-dark-900 font-bold py-3 rounded-xl transition-all border border-white/10">
                            <i class="fab fa-github mr-2"></i> Kaynak Kodu
                        </a>
                    <% } %>
                </div>
            </div>

            <div class="bg-dark-800 border border-white/5 rounded-2xl p-6">
                <h4 class="text-gray-500 text-xs uppercase font-bold mb-4 flex items-center gap-2"><i class="fas fa-microchip"></i> Çekirdek Teknoloji Yığını</h4>
                <div class="flex flex-wrap gap-2">
                    <% project.technologies.forEach(tech => { %>
                        <span class="px-3 py-1 bg-blue-500/10 border border-blue-500/20 text-blue-400 text-xs rounded-md font-mono">
                            <%= tech %>
                        </span>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
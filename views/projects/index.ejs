<%- include('../partials/header', { title: 'Projeler' }) %>

<div class="flex flex-col md:flex-row justify-between items-end mb-12">
    <div>
        <p class="text-brand-400 font-mono text-sm mb-2">/// MİMARİ ARŞİVİ</p>
        <h1 class="text-4xl font-extrabold text-white">Tüm Projeler</h1>
    </div>
    <% if (typeof user !== 'undefined' && user) { %>
    <a href="/projects/new" class="mt-4 md:mt-0 bg-brand-500 hover:bg-brand-400 text-dark-900 font-bold px-6 py-3 rounded-xl shadow-[0_0_20px_rgba(52,211,153,0.3)] transition-all flex items-center gap-2">
        <i class="fas fa-plus-circle"></i> Yeni Proje Ekle
    </a>
    <% } %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% if (projects.length > 0) { %>
        <% projects.forEach(project => { %>
            <a href="/projects/<%= project._id %>" class="group relative bg-dark-800 border border-white/5 rounded-2xl overflow-hidden hover:border-brand-500/50 transition-all hover:shadow-[0_0_30px_rgba(16,185,129,0.1)] flex flex-col">
                
                <div class="h-56 w-full bg-dark-900 relative overflow-hidden">
                    <% if(project.imagePath) { %>
                        <img src="<%= project.imagePath %>" alt="<%= project.title %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
                    <% } else { %>
                        <div class="absolute inset-0 bg-gradient-to-br from-dark-800 to-dark-900 flex items-center justify-center">
                            <i class="fas fa-project-diagram text-5xl text-dark-700 group-hover:text-brand-500 transition-colors"></i>
                        </div>
                    <% } %>
                    <div class="absolute top-4 right-4 bg-dark-900/80 backdrop-blur-md border border-white/10 text-xs font-bold text-gray-300 px-3 py-1 rounded-full flex items-center gap-2">
                        <i class="fas fa-user-circle"></i> <%= project.createdBy.username %>
                    </div>
                </div>

                <div class="p-6 flex flex-col flex-grow">
                    <h3 class="text-xl font-bold text-white mb-3 group-hover:text-brand-400 transition-colors"><%= project.title %></h3>
                    <p class="text-gray-400 text-sm line-clamp-3 mb-6 flex-grow"><%= project.description %></p>
                    
                    <div class="flex items-center justify-between mt-auto">
                        <div class="flex items-center gap-2">
                            <% project.technologies.slice(0,2).forEach(tech => { %>
                                <span class="text-xs text-gray-500 bg-dark-900 px-2 py-1 rounded border border-white/5"><%= tech %></span>
                            <% }) %>
                             <% if(project.technologies.length > 2) { %>
                                <span class="text-xs text-gray-500">+<%= project.technologies.length - 2 %></span>
                            <% } %>
                        </div>
                        <span class="text-brand-400 text-sm font-bold flex items-center gap-1 group-hover:translate-x-1 transition-transform">
                            İncele <i class="fas fa-arrow-right"></i>
                        </span>
                    </div>
                </div>
            </a>
        <% }) %>
    <% } else { %>
        <div class="col-span-full py-20 text-center border border-dashed border-gray-700 rounded-2xl bg-dark-800/50">
            <i class="fas fa-folder-open text-5xl text-gray-600 mb-4"></i>
            <p class="text-gray-400 text-lg">Arşivde henüz proje bulunmuyor.</p>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
<%- include('partials/header', { title: 'Konsol' }) %>

<div class="flex flex-col md:flex-row justify-between items-end mb-10 border-b border-white/10 pb-6">
    <div>
        <p class="text-brand-400 font-mono text-xs mb-1">/// YÖNETİCİ KONSOLU</p>
        <h1 class="text-3xl font-bold text-white">Sistem Genel Bakış</h1>
    </div>
    <div class="flex items-center gap-4 mt-4 md:mt-0">
        <div class="text-right">
            <p class="text-xs text-gray-500">Sunucu Zamanı</p>
            <p class="text-sm text-white font-mono"><%= new Date().toLocaleTimeString('tr-TR') %></p>
        </div>
        <div class="w-2 h-2 rounded-full bg-brand-500 animate-pulse" title="Sistem Çevrimiçi"></div>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-10">
    <div class="bg-dark-800 border border-white/5 p-6 rounded-2xl relative overflow-hidden group">
        <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
            <i class="fas fa-layer-group text-6xl text-brand-500"></i>
        </div>
        <p class="text-gray-400 text-sm mb-1">Toplam Proje</p>
        <h3 class="text-4xl font-bold text-white"><%= stats.projectCount %></h3>
        <div class="mt-4 w-full bg-dark-900 h-1 rounded-full overflow-hidden">
            <div class="bg-brand-500 h-full w-3/4"></div>
        </div>
    </div>

    <div class="bg-dark-800 border border-white/5 p-6 rounded-2xl relative overflow-hidden group">
        <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
            <i class="fas fa-feather-alt text-6xl text-blue-500"></i>
        </div>
        <p class="text-gray-400 text-sm mb-1">Blog Yazısı</p>
        <h3 class="text-4xl font-bold text-white"><%= stats.postCount %></h3>
        <div class="mt-4 w-full bg-dark-900 h-1 rounded-full overflow-hidden">
            <div class="bg-blue-500 h-full w-1/2"></div>
        </div>
    </div>

    <a href="/projects/new" class="bg-gradient-to-br from-brand-600 to-brand-800 p-6 rounded-2xl flex flex-col justify-between hover:scale-[1.02] transition-transform border border-brand-500/30">
        <div class="w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center text-white mb-2">
            <i class="fas fa-plus"></i>
        </div>
        <div>
            <h3 class="text-xl font-bold text-white">Yeni Proje</h3>
            <p class="text-brand-100 text-xs">Yeni mimariyi dağıt</p>
        </div>
    </a>

    <a href="/blog/new" class="bg-gradient-to-br from-blue-600 to-blue-800 p-6 rounded-2xl flex flex-col justify-between hover:scale-[1.02] transition-transform border border-blue-500/30">
        <div class="w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center text-white mb-2">
            <i class="fas fa-pen"></i>
        </div>
        <div>
            <h3 class="text-xl font-bold text-white">Yazı Yaz</h3>
            <p class="text-blue-100 text-xs">Dokümantasyon yayınla</p>
        </div>
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <div class="lg:col-span-2 bg-dark-800 border border-white/5 rounded-2xl overflow-hidden">
        <div class="p-6 border-b border-white/5 flex justify-between items-center">
            <h3 class="font-bold text-white">Projeler Konsolu</h3>
            <span class="text-xs bg-brand-500/10 text-brand-400 px-2 py-1 rounded">Aktif</span>
        </div>
        
        <div class="divide-y divide-white/5">
            <% if (projects.length > 0) { %>
                <% projects.forEach(p => { %>
                    <div class="p-4 flex items-center justify-between hover:bg-white/5 transition-colors group">
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 bg-dark-900 rounded-lg flex items-center justify-center text-gray-500 border border-white/5">
                                <i class="fas fa-code"></i>
                            </div>
                            <div>
                                <h4 class="text-white font-medium group-hover:text-brand-400 transition-colors"><%= p.title %></h4>
                                <p class="text-xs text-gray-500"><%= p.visibility === 'public' ? 'Herkese Açık Düğüm' : 'Özel Düğüm' %></p>
                            </div>
                        </div>
                        <div class="flex items-center gap-2">
                            <a href="/projects/<%= p._id %>" class="p-2 text-gray-400 hover:text-white transition-colors" title="Görüntüle"><i class="fas fa-eye"></i></a>
                            <a href="/projects/<%= p._id %>/edit" class="p-2 text-gray-400 hover:text-brand-400 transition-colors" title="Düzenle"><i class="fas fa-sliders-h"></i></a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="p-8 text-center text-gray-500">Aktif işlem bulunamadı.</div>
            <% } %>
        </div>
    </div>

    <div class="bg-dark-800 border border-white/5 rounded-2xl overflow-hidden">
        <div class="p-6 border-b border-white/5 flex justify-between items-center">
            <h3 class="font-bold text-white">Mimari Günlükleri</h3>
            <i class="fas fa-history text-gray-600"></i>
        </div>
        <div class="p-4 space-y-4">
            <% if (posts.length > 0) { %>
                <% posts.forEach(p => { %>
                    <div class="flex gap-3 items-start">
                        <div class="mt-1 w-2 h-2 rounded-full bg-blue-500 shadow-[0_0_10px_#3b82f6]"></div>
                        <div>
                            <p class="text-sm text-gray-300 hover:text-blue-400 cursor-pointer transition-colors"><a href="/blog/<%= p._id %>"><%= p.title %></a></p>
                            <p class="text-xs text-gray-600 mt-1"><%= new Date(p.createdAt).toLocaleDateString('tr-TR') %></p>
                        </div>
                        <div class="ml-auto">
                             <a href="/blog/<%= p._id %>/edit" class="text-xs text-dark-700 hover:text-white bg-dark-900 px-2 py-1 rounded">Düzenle</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-gray-500 text-sm">Günlük tamponu boş.</p>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
<%- include('../partials/header', { title: 'Giriş Yap' }) %>

<div class="fixed inset-0 z-0 flex items-center justify-center pointer-events-none">
    <div class="w-96 h-96 bg-brand-500/20 rounded-full blur-[100px] absolute top-1/4 left-1/3"></div>
</div>

<div class="min-h-[70vh] flex items-center justify-center relative z-10">
    
    <div class="w-full max-w-md bg-dark-800/80 backdrop-blur-xl border border-white/10 p-8 rounded-3xl shadow-2xl relative overflow-hidden">
        
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-brand-500 to-transparent"></div>

        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-dark-900 rounded-2xl mx-auto flex items-center justify-center text-brand-500 text-2xl border border-white/5 shadow-inner mb-4">
                <i class="fas fa-fingerprint"></i>
            </div>
            <h2 class="text-2xl font-bold text-white">Güvenli Mimar Portalı</h2>
            <p class="text-gray-500 text-sm mt-1">Erişim sağlamak için kimliğinizi doğrulayın.</p>
        </div>

        <% if (typeof errors != 'undefined' && errors.length > 0) { %>
            <% errors.forEach(error => { %>
                <div class="bg-red-500/10 border border-red-500/20 text-red-400 text-sm p-3 rounded-lg mb-4 text-center flex items-center justify-center gap-2">
                    <i class="fas fa-exclamation-triangle"></i> <%= error.msg %>
                </div>
            <% }) %>
        <% } %>

        <form action="/auth/login" method="POST" class="space-y-5">
            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">E-posta Adresi</label>
                <div class="relative">
                    <span class="absolute left-4 top-3.5 text-gray-600"><i class="fas fa-envelope"></i></span>
                    <input type="email" name="email" value="<%= formData.email || '' %>" required 
                        class="w-full bg-dark-900 border border-dark-700 text-white pl-10 pr-4 py-3 rounded-xl focus:outline-none focus:border-brand-500 focus:ring-1 focus:ring-brand-500 transition-all placeholder-gray-700"
                        placeholder="ornek@mail.com">
                </div>
            </div>

            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Şifre</label>
                <div class="relative">
                    <span class="absolute left-4 top-3.5 text-gray-600"><i class="fas fa-lock"></i></span>
                    <input type="password" name="password" required 
                        class="w-full bg-dark-900 border border-dark-700 text-white pl-10 pr-4 py-3 rounded-xl focus:outline-none focus:border-brand-500 focus:ring-1 focus:ring-brand-500 transition-all placeholder-dots"
                        placeholder="••••••••">
                </div>
            </div>

            <button type="submit" class="w-full bg-brand-500 hover:bg-brand-400 text-dark-900 font-bold py-4 rounded-xl shadow-[0_0_20px_rgba(52,211,153,0.3)] transition-all transform hover:scale-[1.02]">
                Kimlik Doğrula <i class="fas fa-arrow-right ml-2"></i>
            </button>
        </form>

        <div class="text-center mt-6">
            <p class="text-gray-500 text-xs">Burada yeni misiniz? <a href="/auth/register" class="text-brand-400 hover:text-brand-300 font-bold">Erişim Profili Oluştur</a></p>
        </div>
        
        <div class="mt-8 flex items-center justify-center gap-2 text-[10px] text-gray-600 uppercase tracking-widest font-mono">
            <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span> Sistemler Çalışır Durumda
        </div>
    </div>
</div>

<%- include('../partials/footer') %>